{% extends "admin" %}

{% block content %}
  <h3>Categories</h3>
  <div class="row">
    <div class="col-md-12">
      <p>
        <a href="/admin/categories/new" class="button primary">
          <i class="fa fa-plus-square"></i>
          Add new category
        </a>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="content-panel">
        <table class="table table-bordered table-striped table-condensed">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Created at</th>
              <th>Updated at</th>
              <th>&nbsp;</th>
            </tr>
          </thead>
          <tbody>
          {% for category in categories %}
            <tr>
              <td>{{ category.id }}</td>
              <td>{{ category.name }}</td>
              <td>{{ category.created_at }}</td>
              <td>{{ category.updated_at }}</td>
              <td>
                <a href="/admin/category/{{ category.id }}" title="Edit">
                  <i class="fa fa-pencil-square" aria-hidden="true"></i>
                </a>
              </td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
{% endblock %}
